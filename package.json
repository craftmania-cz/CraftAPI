{
  "name": "craftapi-2",
  "version": "1.0.0",
  "description": "CraftMania.CZ REST API in TypeScript and NodeJS.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc && npm run docs-build",
    "clean": "rm -rf dist/* && touch dist/.gitkeep",
    "start": "node dist/server.js",
    "watch": "nodemon dist/server.js",
    "test": "mocha --reporter spec --compilers ts:ts-node/register 'test/**/*.test.ts'",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "develop": "npm run clean && npm run build && npm run watch",
    "docs-watch": "aglio --theme-variables slate -i src/public/index.md -s",
    "docs-build": "aglio --theme-variables slate -i src/public/index.md -o ./dist/index.html"
  },
  "keywords": [
    "node",
    "typescript",
    "api",
    "craftmania"
  ],
  "author": "MrWakeCZ",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.6",
    "@types/chai-http": "^3.0.5",
    "@types/config": "0.0.34",
    "@types/debug": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/mysql": "github:types/mysql",
    "@types/node": "^10.11.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/signale": "^1.2.0",
    "aglio": "^2.3.0",
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "debug": "^3.2.6",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "mysql": "^2.16.0",
    "nodemon": "^1.18.6",
    "signale": "^1.3.0",
    "tslint": "^5.11.0"
  }
}
